iew-pullname: Weekly Feefo Report Agent CT

on:
  schedule:
    - cron: '0 0 * * 1'  # Every Monday at 00:00 UTC (cron syntax)
  workflow_dispatch:      # Allows manual trigger

jobs:
  run-agent:
    runs-on: ubuntu-latest

    permissions:
      contents: write  # Adjust permissions as necessary

    env:
      FEEFO_API_TOKEN: ${{ secrets.FEEFO_API_TOKEN }}  # Use the stored secret

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3  # Check out the repository

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: |
          pip install -r requirements.txt
          pip install selenium webdriver-manager openpyxl

      - name: Run Feefo API Agent
        run: python review-pull/Feefo-Reviews-Last-Week-CT.py  # Run your Python script
