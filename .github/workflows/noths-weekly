name: Run Feefo Reviews Script

on:
  # Trigger the workflow manually
  workflow_dispatch:
  # Trigger on push to main branch
  push:
    branches:
      - main

jobs:
  run_script:
    runs-on: ubuntu-latest  # Running on the latest Ubuntu environment
    steps:
      # Check out the code in the repository
      - name: Checkout code
        uses: actions/checkout@v2

      # Set up Python environment
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'  # Specify the version of Python

      # Install dependencies
      - name: Install dependencies
        run: |
          pip install -r requirements.txt

      # Run the Feefo Reviews script
      - name: Run Feefo Reviews Script
        run: |
          python review-pull/Feefo-Reviews-Last-Week.py  # Adjust path if necessary
